<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.graduateproject.fileupload.repository.IFileUploadMapper">
	
	<!-- db 내용 총 갯수 확인 -->
	<select id="total" resultType="int">
		SELECT COUNT(*)
		FROM fileupload
	</select>
	
	<!-- Original file db 저장 -->
	<insert id="uploadOriginalfile">
		INSERT INTO fileupload
		(`index`,`filename`,`data`)
		VALUES (#{index}, #{filename}, #{data})
	</insert>
	
	<!-- 탐지&해제 result db 저장 -->
	<insert id="uploadResultfile">
		INSERT INTO fileupload
		(`index`,`filename`,`title`,`description`,`match`,`deob`,`posfirst`,`poslast`)
		VALUES (#{index}, #{filename}, #{title}, #{description}, #{match}, #{deob}, #{posfirst}, #{poslast})
	</insert>





</mapper>